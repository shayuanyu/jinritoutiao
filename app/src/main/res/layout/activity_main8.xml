<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1"
    android:background="@drawable/beijingtu"
    tools:context="com.example.lenovo.jinritoutiao.activity.Main8Activity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_marginTop="10dp"
        android:background="@color/viewBackground"
        >
        <ImageView

            android:id="@+id/img_retun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:src="@drawable/zuojian"/>
        <TextView
            android:id="@+id/tv_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="动态"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"

            />
         <ImageView

            android:id="@+id/jiahaoo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:src="@drawable/jiahao"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>
    <TextView

       android:id="@+id/huati"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:text="huati"
       android:gravity="center"
        android:layout_marginTop="26dp"
        ></TextView>

</LinearLayout>
