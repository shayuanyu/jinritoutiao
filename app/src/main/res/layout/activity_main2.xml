<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.example.lenovo.jinritoutiao.com.example.lenovo.jinritoutiao.activity.Main2Activity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_marginTop="10dp"
        android:background="@color/viewBackground"
        >
        <ImageView

            android:id="@+id/imag_rest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:src="@drawable/zuojian"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号登陆注册"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"

            />

    </RelativeLayout>

    <EditText
        android:id="@+id/et_phone_number"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:hint="请输入手机号码"
        android:onClick="onClick" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_verification_code"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="请输入验证码"
            android:onClick="onClick" />

        <TextView
            android:id="@+id/tv_get_verification_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:onClick="onClick"
            android:padding="10dp"
            android:text="获取验证码"
            android:textSize="19dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_verification_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@color/colorPrimary"
        android:gravity="center_horizontal"
        android:text="登录"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/tv_show_verification_pager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15dp"
        android:text="注册"
        android:textSize="25dp" />

</LinearLayout>

